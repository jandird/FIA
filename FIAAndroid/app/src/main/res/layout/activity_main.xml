<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dalipjandir.fiaandroid.MainActivity">

    <TextView
            android:text="Flag Identification Application"
            android:layout_width="370dp"
            android:layout_height="536dp" android:id="@+id/title" android:visibility="visible"
            android:textSize="50sp" android:fontFamily="cursive" android:textAlignment="center"
            app:layout_constraintRight_toLeftOf="@+id/buttonID" tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.002" app:layout_constraintVertical_bias="0.0"
    />
    <Button
            android:text="ID Flag"
            android:layout_width="300dp"
            android:layout_height="50dp" android:id="@+id/buttonID" app:layout_anchor="@+id/title"
            app:layout_anchorGravity="center_vertical|center_horizontal"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" android:layout_marginStart="35dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="35dp"
            app:layout_constraintRight_toRightOf="parent" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="35dp" android:layout_marginRight="35dp"
            app:layout_constraintVertical_bias="0.406" style="@style/Widget.AppCompat.Button"/>
    <Button
            android:text="Results"
            android:layout_height="50dp" tools:layout_editor_absoluteY="274dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/buttonResults" android:layout_width="300dp"/>
    <Button
            android:text="Tutorial"
            android:layout_height="50dp" tools:layout_editor_absoluteY="405dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/buttonTutorial" android:layout_width="300dp"/>
    <Button
            android:text="Most Searched"
            android:layout_height="50dp" tools:layout_editor_absoluteY="340dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/button11" android:layout_width="300dp"/>

</android.support.constraint.ConstraintLayout>
